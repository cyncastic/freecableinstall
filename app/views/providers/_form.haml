= form_with(model: provider, local: true, class: 'container', id: 'needs-validation') do |form|

  - if provider.errors.any?
    #error_explanation.alert.alert-danger{ role: 'alert' }
      %h2
        = pluralize(provider.errors.count, "error")
        prohibited this provider from being saved:
      %ul
        - provider.errors.full_messages.each do |message|
          %li= message

  .form-group
    = form.label :name, class: 'control-label required'
    = form.text_field :name, id: :provider_name, class: 'form-control', required: true

  .form-group
    = form.label :zorder, class: 'control-label required'
    = form.number_field :zorder, id: :provider_zorder, class: 'form-control', required: true

  .form-group
    = form.submit class: 'btn btn-info btn-lg'