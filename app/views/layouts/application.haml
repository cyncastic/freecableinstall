  %body

    / Google Tag Manager (noscript)
    %noscript
      %iframe{ height: 0, width: 0, src: 'https://www.googletagmanager.com/ns.html?id=GTM-MTB2KDG', style: 'display:none;visibility:hidden' }
    / End Google Tag Manager (noscript)

    %nav.fixed-top
      %header
        .text-center
          -# =link_to image_tag('logo2.png'), root_path
          %a{ href: '/' }
            %svg{ version: '1.1', viewbox: '0 0 310 130', width: '310', height: '130' }
              %rect{ x: '115', y:   '5', fill: 'NONE', width: '80', height: '80', stroke: 'black', 'stroke-width': '0' }
              %g.logobox{ 'stroke-width': '5', fill: 'none' }
                %polyline{ points: '114,35  114, 4  145, 4', stroke: '#E9572C' }
                %polyline{ points: '165, 4  196, 4  196,35', stroke: '#89C138' }
                %polyline{ points: '196,55  196,86  165,86', stroke: '#4CBFD8' }
                %polyline{ points: '145,86  114,86  114,55', stroke: '#69C7B5' }
                %text.logof{ x: '142', y:  '64', fill: '#FAB30E', 'font-size': '52', 'font-weight': 'bold', 'font-family': 'roboto' } F
              %text.logoname{ x:   '6', y: '128', fill: '#FAB30E', 'font-size': '37', 'font-family': 'Crete Round', 'letter-spacing': '2px;' } Free Cable Install

      %ul.nav.justify-content-center.hidden
        %li.nav-item=link_to 'Internet',    internet_path, class: 'text-warning nav-link'
        %li.nav-item=link_to 'VOIP',        phones_path,   class: 'text-warning nav-link'
        -# %li.nav-item=link_to 'Free Phones', polycoms_path, class: 'text-warning nav-link'
        %li.nav-item=link_to 'Resellers',   resellers_path,      class: 'text-warning nav-link'
        -# %li.nav-item=link_to 'Test',     test_path,        class: 'text-warning nav-link'

    .container=yield

    .container.partners.pt-4
      %h1.text-center.text-secondary.mt-5.mb-3 Our Partners
      %ul.d-flex.justify-content-around.flex-wrap
        %li=image_tag 'logos/verizon.svg'
        %li=image_tag 'logos/charter-spectrum.svg'
        %li=image_tag 'logos/optimum.svg'
        %li=image_tag 'logos/att.svg'
        %li=image_tag 'logos/centurylink.svg'
        %li=image_tag 'logos/cogent.svg'
        %li=image_tag 'logos/comcast.svg'
        %li=image_tag 'logos/cox.svg'
        %li=image_tag 'logos/frontier-auth.svg'
        -# %li=image_tag 'logos/lightpath.svg'
        %li=image_tag 'logos/mediacom.svg'
        %li=image_tag 'logos/rcn.svg'
        -# %li=image_tag 'logos/xfinity.svg'

    %footer.mt-5
      .container
        %p.text-center.text-muted
          Powered by
          %a.text-info{ href: 'http://maxsip.com' } Maxsip
          &copy; |
          %a.text-info.tandcapply{ href: '#', 'data-toggle': 'modal', 'data-target': '#exampleModalLong' } Terms and Condition

