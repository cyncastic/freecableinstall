      .invalid-feedback Please provide the State

    .form-group.col-md-3
      / Zip Code
      %label.control-label.required{ for: 'zip_id' } Zip Code
      %input#zip_id.form-control{ name: 'zip', placeholder: '#####', type: 'text', required: true }/
      .invalid-feedback Please provide the Zip


  .form-row
    .form-group.col-md-6
      %label.control-label{:for => "state_id"} Best Time To Contact You
      %select.form-control.selectpicker
        %option{ value: '', disabled: true, selected: true} Please Choose One
        %option{ value: 'morning'   } Morning
        %option{ value: 'afternoon' } Afternoon
        %option{ value: 'evening'   } Evening
    .form-group.col-md-6
      %label.control-label{:for => "state_id"} Best Way To Contact You
      %select.form-control.selectpicker
        %option{ value: '', disabled: true, selected: true} Please Choose One
        %option{ value: 'phone' } Phone
        %option{ value: 'email' } Email

  .form-group
    %label.form-check-label{ for: 'full_name_id' }
      %input.form-check-input{ name: 'first_name', placeholder:  'John', type: 'checkbox' }/
      I Am Also Interested In Free Cable Installation

