.jumbotron
  .container
    %h1.display-4 Business Cable
    %p.lead Get your business internet installed completely free!  Even if your local provider charges a fee.

%form

  .form-group
    / Cable Company
    %label.control-label{ for: 'state_id' } Cable Provider
    %select#state_id.form-control
      %option{ value: 'Comcast', 'data-thumbnail': "logo.png" } Comcast
      %option{ value: 'Optimum' } Optimum
      %option{ value: 'Spectrum' } Spectrum
      %option{ value: 'Verizon FIOS' } Verizon FIOS

  .form-row
    .form-group.col-md-6
      / First Name
      %label.control-label{ for: 'full_name_id' } Full Name
      %input#full_name_id.form-control{ name: 'first_name', placeholder:  'John', type: 'text' }/

    .form-group.col-md-6
      / Last Name
      %label.control-label{ for: 'full_name_id' } Full Name
      %input#full_name_id.form-control{ name: 'last_name', placeholder:  'Doe', type: 'text' }/

  .form-group
    / Email
    %label.control-label{ for: 'full_name_id' } Email
    %input#full_name_id.form-control{ name: 'phone', placeholder:  'john@example.com', type: 'email' }/

  .form-group
    / Phone
    %label.control-label{ for: 'full_name_id' } Phone Number
    %input#full_name_id.form-control{ name: 'phone', placeholder:  '555-555-555', type: 'tel' }/

  .form-group
    / Business Name
    %label.control-label{ for: 'full_name_id' } Business Name
    %input#full_name_id.form-control{ name: 'full_name', placeholder:  'Acme Co.', type: 'text' }/

  .form-group
    / Street 1
    %label.control-label{ for: 'street1_id' } Street Address 1
    %input#street1_id.form-control{ name: 'street1', placeholder: 'Street address, P.O. box, company name, c/o', type: 'text' }/

  .form-group
    / Street 2
    %label.control-label{ for: 'street2_id' } Street Address 2
    %input#street2_id.form-control{:name => 'street2', :placeholder => 'Apartment, suite, unit, building, floor, etc.', type: 'text' }/

  .form-row
    .form-group.col-md-6
      / City
      %label.control-label{ for: 'city_id' } City
      %input#city_id.form-control{ name: 'city', placeholder: 'Smallville', type: 'text' }/

    .form-group.col-md-4
